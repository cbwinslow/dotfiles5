# =============================================================================
# ZSH Environment Variables - Matrix Theme
# =============================================================================

" Editor and pager
export EDITOR="nano"
export PAGER="less"
export BROWSER="firefox"

" Development paths
export DEVELOPMENT_ROOT="$HOME/projects"
export SCRIPTS_DIR="$HOME/scripts"
export CONFIG_DIR="$HOME/.config"

" Matrix theme variables
export MATRIX_THEME="active"
export MATRIX_COLORS="neon_green,bright_cyan,neon_yellow"
export FONT_FAMILY="Ubuntu Mono"

" Performance settings
export HISTSIZE=10000
export HISTFILESIZE=10000
export SAVEHIST=1000
